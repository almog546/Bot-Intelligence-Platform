generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(cuid())
  username  String        @unique
  name      String
  password  String
  createdAt DateTime      @default(now())

  strategies Strategy[]

}
model Strategy {
  id           String   @id @default(cuid())
  name         String
  totalTrades  Int
  netProfit    Float
  winRate      Float
  maxDrawdown  Float
  initialCapital Float @default(10000)
  equityAfterTrades Float?

  fileName     String
  fileUrl      String?
  userId       String
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id])
  trades       Trade[]
}
model Trade {
  id          String   @id @default(cuid())
  date        DateTime
  netProfit   Float
  
  strategy    Strategy @relation(fields: [strategyId], references: [id])
  strategyId  String
}
